<?php
require_once( 'api.phtml' );

$api = new DSolverAPI();

$method = $_REQUEST[ 'method' ];

if( $method == "suggest" )
{
	if( strlen( $_REQUEST[ 'key' ] ) > 12 )
	{
		echo "{\"error\":\"Number of suggested alpbabets must be less than 13\"}";
		return;
	}
	$res = $api->suggestWords( urlencode( $_REQUEST[ 'length' ] ), urlencode( $_REQUEST[ 'key' ] ) );
	
	echo $res;
}